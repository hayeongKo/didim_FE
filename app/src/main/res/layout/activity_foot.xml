            android:src="@drawable/tutorial_circle_checked"
            android:visibility="gone"
            />

    <ImageView
            android:id="@+id/foot_left_circle_checked_4_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/foot_iv"
            app:layout_constraintTop_toTopOf="@id/foot_left_circle_checked_2_iv"
            android:layout_marginTop="60px"
            android:src="@drawable/tutorial_circle_checked"
            android:visibility="gone"
            />

    <ImageView
            android:id="@+id/foot_left_circle_checked_5_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/foot_iv"
